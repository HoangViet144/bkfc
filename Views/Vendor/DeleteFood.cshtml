@model bkfc.Models.Food

@{
    ViewData["Title"] = "Delete " + @Model.Name;
    ViewData["css"] = "profile.css";
    var vendorId =  ViewData["vendorId"];
}
@if (User.Identity.IsAuthenticated && (User.IsInRole("Admin")||User.IsInRole("FoodCourtManager")||User.IsInRole("VendorManager")))
{    
<div class="header-profile">
  <img class="logo" src= @Model.Image >
  <div class="profile-title">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <h4> Delete food</h4>
  </div>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VendorId)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.VendorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class = "col-sm-2">
            @Html.DisplayFor(model => model.Discount)
        </dd>
    </dl>
    
    <form asp-action="DeleteFood">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-lg btn-block" />
    </form>
    <div class="change-page">
        <a asp-action="EditFood" asp-route-id="@Model.Id" asp-route-vendorid="@Model.VendorId" >Edit</a> | 
        <a asp-action="Index" asp-route-id="@Model.VendorId">Back to vendor</a>
    </div>
</div>
}

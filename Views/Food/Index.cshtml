@model IEnumerable<bkfc.Models.Food>

@{
    ViewData["Title"] = "All Food";
    ViewData["css"] = "profile.css";
}

<h1>Manage your food</h1>
<a class="btn btn-primary" asp-action="Create" asp-route-id="@ViewData["vendorId"]">Add new food</a>


@foreach (var item in Model) {

    <div class = "food-management" >
        <div class = "food-management-information">
            <a asp-action="Details" asp-route-id="@item.Id" >
                <img src=@item.Image class="image-food">
            </a>
            
            <div class="food-information">
                <div>@Html.DisplayFor(modelItem => item.Name)</div>
                <div>Price: @Html.DisplayFor(modelItem => item.Price)</div>
                <div>Amount: @Html.DisplayFor(modelItem => item.Amount)</div>
                <div>Discount: @Html.DisplayFor(modelItem => item.Discount)</div>
                @* <div>Vendor: @Html.DisplayFor(modelItem => item.VendorId)</div> *@
            </div>
            <div class="manage">
                <div>
                    <a class="btn btn-primary btn-block" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </div>
                @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> *@
                <div>
                    <a class="btn btn-danger btn-block" asp-action="Delete" asp-route-id="@item.Id">Delete</a>    
                </div>
                
            </div>
        </div>

        
    </div>


}

@* @model IEnumerable<bkfc.Models.Order> *@

@{
    ViewData["Title"] = "Order status";
    ViewData["css"] = "profile.css";
    var cart = (List<Item>)ViewData["cart"];

}

<h1 style="text-align: center;">My Cart</h1>
@if(cart != null)
{
    @foreach(Item item in cart)
    {
        <div class="container px-0 my-4 d-flex justify-content-between align-items-center border">
            <img style="width: 80px; height: 90px; object-fit: cover;" src=@item.food.Image alt="kfc1" class="rounded">
            <div class="text-center d-flex flex-column justify-content-around" style="height: 90px;">
                <h5>@item.food.Name</h5>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-primary" type="button" name="button">
                    +
                    </button>
                    <input type="text" name="name" value=@item.quantity size="2" style="text-align: center;">
                    <button class="btn btn-danger" type="button" name="button">
                    -
                    </button>
                </div>
            </div>
            <div>@item.food.Price VND</div>
            <button class="btn btn-link text-danger"><i class="far fa-trash-alt"></i></button>          
        </div>
    }
}
